{
  "name": "lix-language",
  "displayName": "Lix Language",
  "description": "Lix is a Light Latex.",
  "version": "0.2.1",
  "publisher": "pengfei-hao",
  "license": "MIT",
  "homepage": "https://github.com/Pengfei-Hao/Lix",
  "author": {
    "name": "Pengfei Hao",
    "email": "pengfei.hao@outlook.com",
    "url": "https://haopf.cc"
  },
  "icon": "./icons/lix.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pengfei-Hao/Lix"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Programming Languages",
    "Chat",
    "Formatters",
    "Linters",
    "Other"
  ],
  "keywords": [
    "lix",
    "markup-language",
    "generate",
    "preview",
    "markdown",
    "latex",
    "html"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lix.helloWorld",
        "title": "Hello World",
        "category": "Lix"
      },
      {
        "command": "lix.test",
        "title": "Test Lix",
        "category": "Lix"
      },
      {
        "command": "lix.previewPdf",
        "title": "Preview PDF",
        "shortTitle": "Preview",
        "category": "Lix",
        "icon": "$(file-pdf)"
      },
      {
        "command": "lix.convertFile",
        "title": "Convert to Lix (AI)",
        "category": "Lix",
        "icon": "$(file-pdf)"
      },
      {
        "command": "lix.parse",
        "title": "Parse Result",
        "category": "Lix",
        "icon": "$(list-selection)"
      },
      {
        "command": "lix.analyse",
        "title": "Analyse Result",
        "category": "Lix",
        "icon": "$(list-tree)"
      },
      {
        "command": "lix.generate",
        "title": "Generate Output",
        "category": "Lix",
        "icon": "$(file-code)"
      },
      {
        "command": "lix.compile",
        "title": "Compile Document",
        "category": "Lix",
        "icon": "$(preview)"
      },
      {
        "command": "lix.pick",
        "title": "Pick ...",
        "category": "Lix",
        "icon": "$(settings-gear)"
      },
      {
        "command": "lix.pickLatex",
        "title": "Pick Latex",
        "category": "Lix",
        "icon": "$(settings-gear)"
      },
      {
        "command": "lix.pickMarkdown",
        "title": "Pick Markdown",
        "category": "Lix",
        "icon": "$(settings-gear)"
      },
      {
        "command": "lix.debug",
        "title": "Switch Debug Mode",
        "shortTitle": "Debug Mode",
        "category": "Lix",
        "icon": "$(bug)"
      }
    ],
    "languages": [
      {
        "id": "lix",
        "aliases": [
          "Lix"
        ],
        "extensions": [
          ".lix"
        ],
        "configuration": "./language/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lix",
        "scopeName": "source.lix",
        "path": "./language/lix.tmLanguage.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "lix.pdfViewer",
        "displayName": "Lix PDF Preview",
        "selector": [
          {
            "filenamePattern": "*.pdf"
          }
        ]
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "lix.compile",
          "group": "navigation",
          "when": "lix.isLix == true"
        },
        {
          "submenu": "lix.main",
          "group": "navigation",
          "when": "lix.isLix == true"
        }
      ],
      "view/title": [
        {
          "command": "lix.compile",
          "group": "navigation",
          "when": "lix.isLix == true && view === lix-status"
        },
        {
          "command": "lix.pick",
          "group": "navigation",
          "when": "lix.isLix == true && view === lix-status"
        },
        {
          "command": "lix.compile",
          "group": "1_lix@1",
          "when": "lix.isLix == true && view === lix-status"
        },
        {
          "submenu": "lix.generators",
          "group": "1_lix@2",
          "when": "lix.isLix == true && view === lix-status"
        },
        {
          "command": "lix.convertFile",
          "group": "2_convert",
          "when": "view === lix-status"
        },
        {
          "command": "lix.debug",
          "group": "3_debug@1",
          "when": "view === lix-status"
        },
        {
          "command": "lix.generate",
          "when": "lix.isLix == true && lix.debug == true && view === lix-status",
          "group": "3_debug@2"
        },
        {
          "command": "lix.analyse",
          "when": "lix.isLix == true && lix.debug == true && view === lix-status",
          "group": "3_debug@3"
        },
        {
          "command": "lix.parse",
          "when": "lix.isLix == true && lix.debug == true && view === lix-status",
          "group": "3_debug@4"
        }
      ],
      "lix.main": [
        {
          "command": "lix.compile",
          "when": "lix.isLix == true",
          "group": "navigation@1"
        },
        {
          "submenu": "lix.generators",
          "when": "lix.isLix == true",
          "group": "navigation@2"
        },
        {
          "command": "lix.convertFile",
          "group": "convert"
        },
        {
          "command": "lix.debug",
          "group": "debug@1"
        },
        {
          "command": "lix.generate",
          "when": "lix.isLix == true && lix.debug == true",
          "group": "debug@2"
        },
        {
          "command": "lix.analyse",
          "when": "lix.isLix == true && lix.debug == true",
          "group": "debug@3"
        },
        {
          "command": "lix.parse",
          "when": "lix.isLix == true && lix.debug == true",
          "group": "debug@4"
        }
      ],
      "lix.generators": [
        {
          "command": "lix.pickLatex",
          "group": "navigation"
        },
        {
          "command": "lix.pickMarkdown",
          "group": "navigation"
        },
        {
          "command": "lix.pick",
          "group": "pick"
        }
      ]
    },
    "submenus": [
      {
        "id": "lix.main",
        "icon": "./icons/lix-icon-small.svg",
        "label": "Lix"
      },
      {
        "id": "lix.generators",
        "label": "Pick Generator",
        "icon": "$(gear)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lix-bar",
          "title": "Lix",
          "icon": "/icons/lix-icon.svg"
        }
      ]
    },
    "views": {
      "lix-bar": [
        {
          "id": "lix-status",
          "name": "Status"
        },
        {
          "id": "lix-information",
          "name": "Information",
          "visibility": "collapsed",
          "when": "lix.isLix == true"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "lix-status",
        "contents": "Open or create a Lix file to see Lix status and information here.\n[New File](command:workbench.action.files.newUntitledFile)\n[Open File](command:workbench.action.files.openFile)\nOr convert an existing file to Lix format.\n[Convert File to Lix (AI)](command:lix.convertFile)"
      }
    ],
    "configuration": {
      "title": "Lix",
      "properties": {
        "lix.locale": {
          "type": "string",
          "enum": [
            "zh-CN",
            "en-US"
          ],
          "default": "en-US",
          "description": "UI language for Lix."
        },
        "lix.latexCommand.mac": {
          "type": "string",
          "default": "xelatex -synctex=1 -interaction=nonstopmode",
          "description": "Command used to invoke LaTeX on macOS."
        },
        "lix.latexCommand.linux": {
          "type": "string",
          "default": "xelatex -synctex=1 -interaction=nonstopmode",
          "description": "Command used to invoke LaTeX on Linux."
        },
        "lix.latexCommand.windows": {
          "type": "string",
          "default": "xelatex.exe -synctex=1 -interaction=nonstopmode",
          "description": "Command used to invoke LaTeX on Windows."
        },
        "lix.cacheDirectory": {
          "type": "string",
          "default": ".lix",
          "description": "Directory for temporary build artifacts. Relative paths are resolved from the current Lix file."
        }
      }
    },
    "languageModelTools": [
      {
        "name": "lix-get_version",
        "tags": [
          "lix",
          "version"
        ],
        "toolReferenceName": "lixVersion",
        "displayName": "Lix Version",
        "modelDescription": "Get the version of Lix",
        "canBeReferencedInPrompt": true,
        "icon": "$(file-pdf)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "format": {
              "type": "string",
              "description": "Indicating the version format.",
              "enum": [
                "short",
                "long"
              ],
              "default": "short"
            }
          }
        }
      },
      {
        "name": "lix-get_syntax_tree",
        "tags": [
          "lix",
          "language",
          "syntax"
        ],
        "toolReferenceName": "lixSyntaxTree",
        "displayName": "Lix Syntax Tree",
        "modelDescription": "Get the syntax tree of Lix in current document.",
        "canBeReferencedInPrompt": true,
        "icon": "$(file-pdf)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "description": "The text content to analyze for the syntax tree. If not provided, the current document will be used."
            }
          }
        }
      },
      {
        "name": "lix-get_parse_messages",
        "tags": [
          "lix",
          "language",
          "parse",
          "messages"
        ],
        "toolReferenceName": "lixParseMessages",
        "displayName": "Lix Parse Messages",
        "modelDescription": "Get the parse messages of Lix in current document",
        "canBeReferencedInPrompt": true,
        "icon": "$(file-pdf)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "description": "The text content to analyze for the parse messages. If not provided, the current document will be used."
            }
          }
        }
      },
      {
        "name": "lix-get_markdown_output",
        "tags": [
          "lix",
          "generate",
          "markdown"
        ],
        "toolReferenceName": "lixMarkdownOutput",
        "displayName": "Lix Markdown Output",
        "modelDescription": "Get the markdown output of Lix in current document",
        "canBeReferencedInPrompt": true,
        "icon": "$(file-pdf)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "description": "The text content to analyze for the markdown output. If not provided, the current document will be used."
            }
          }
        }
      },
      {
        "name": "lix-get_latex_output",
        "tags": [
          "lix",
          "generate",
          "latex"
        ],
        "toolReferenceName": "lixLatexOutput",
        "displayName": "Lix LaTeX Output",
        "modelDescription": "Get the LaTeX output of Lix in current document",
        "canBeReferencedInPrompt": true,
        "icon": "$(file-pdf)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "description": "The text content to analyze for the LaTeX output. If not provided, the current document will be used."
            }
          }
        }
      },
      {
        "name": "lix-get_output_uri",
        "tags": [
          "lix",
          "generate",
          "output"
        ],
        "toolReferenceName": "lixOutputUri",
        "displayName": "Lix Output URI",
        "modelDescription": "Get the output file URI of Lix in current document. The uri is valid only if the current document is lix file.",
        "canBeReferencedInPrompt": true,
        "icon": "$(file-pdf)"
      }
    ],
    "chatParticipants": [
      {
        "id": "lix",
        "name": "lix",
        "fullName": "Lix",
        "commands": [
          {
            "name": "convert",
            "description": "Convert documents to Lix format."
          }
        ],
        "description": "AI assistant for Lix, the Light LaTeX.",
        "isSticky": true
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@vscode/chat-extension-utils": "^0.0.0-alpha.5",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-uri": "^3.1.0"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.7.1",
    "@vscode/test-electron": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "typescript": "^4.9.5",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0"
  }
}