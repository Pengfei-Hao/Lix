{
  "name": "lix",
  "displayName": "Lix",
  "description": "Lix is a Light Latex.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lix.helloWorld",
        "title": "Hello World",
        "category": "Lix"
      },
      {
        "command": "lix.generate",
        "title": "Generate target (LaTeX, Markdown...) code",
        "shortTitle": "Generate",
        "category": "Lix",
        "icon": "$(file-code)"
      },
      {
        "command": "lix.compile",
        "title": "Compile Lix file to PDF",
        "category": "Lix",
        "icon" : "$(preview)"
      },
      {
        "command": "lix.selectCompileTarget",
        "title": "Select compile target",
        "category": "Lix",
        "icon": "$(settings-gear)"
      },
      {
        "command": "lix.parse",
        "title": "Parse the file and generate syntax tree",
        "shortTitle": "Parse",
        "category": "Lix",
        "icon": "$(list-tree)"
      },
      {
        "command": "lix.test",
        "title": "Test Lix",
        "category": "Lix"
      },
      {
        "command": "lix.debug",
        "title": "Enable/Disable debug mode",
        "shortTitle": "Debug",
        "category": "Lix"
      }
    ],
    "languages": [
      {
        "id": "lix",
        "aliases": [
          "Lix"
        ],
        "extensions": [
          ".lix"
        ],
        "configuration": "./language/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lix",
        "scopeName": "source.lix",
        "path": "./syntaxes/lix.tmLanguage.json"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "lix.generate",
          "group": "navigation",
          "when": "editorLangId == lix && resourceScheme == file"
        },
        {
          "command": "lix.compile",
          "group": "navigation",
          "when": "editorLangId == lix && resourceScheme == file"
        },
        {
          "command": "lix.parse",
          "group": "navigation",
          "when": "editorLangId == lix && resourceScheme == file"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lix-navigator",
          "title": "Lix Navigator",
          "icon": "/icons/icon-light.svg"
        }
      ]
    },
    "views": {
      "lix-navigator": [
        {
          "id": "lix-command-list",
          "name": "Commands"
        },
        {
          "id": "lix-label-list",
          "name": "Label List"
        },
        {
          "id": "lix-font-list",
          "name": "Font List"
        },
        {
          "id": "lix-math-list",
          "name": "Math List"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.3.0",
    "pdfjs-dist": "^3.10.111"
  }
}
